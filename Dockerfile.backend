FROM oven/bun:slim

WORKDIR /app

# Copy dependency files first for layer caching
COPY server/package.json server/bun.lock ./

# Install dependencies
RUN bun install --production

# Copy source code
COPY server/ .

# Expose port
EXPOSE 3000

# Run the app directly (no bundling needed)
CMD ["bun", "run", "app.js"]